{% extends 'admin/base_admin.html.twig' %}

{% block title %}OuiCustOm : Liste des utilisateurs{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Liste des utilisateurs</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-customRequests">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Nom</th>
                            <th>Email</th>
                            <th>Ville</th>
                            <th>Code postal</th>
                            <th>Description</th>
                            <th>Téléphone</th>
                            <th>Image de profil</th>
                            <th>Date création</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for u in user_list %}
                            <tr>
                                <td>{{ u.id }}</td>
                                <td>{{ u.username }}</td>
                                <td>{{ u.email }}</td>
                                <td>{{ u.city }}</td>
                                <td>{{ u.zipcode }}</td>
                                <td>{{ u.description }}</td>
                                <td>{{ u.phone }}</td>
                                <td><img src="{{ asset('uploads/profilPictures/' ~ u.profilPicture) | imagine_filter('my_thumb') }}" alt="Image de profil" class="img-responsive"></td>
                                <td>{{ u.creationDate|date("d/m/Y H:i") }}</td>
                                <td><a href="{{ path('admin_user_delete', {id: u.id}) }}">Supprimer</a></td>
                            </tr>
                        {%  endfor %}
                        </tbody>
                    </table>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <!-- Page-Level Demo Scripts - Tables - Use for reference -->

{% endblock %}