{% extends 'base_front.html.twig' %}


{% block title %}Profil de {{ user.username }}{% endblock %}

{% block body %}

<div class="container-fluid artistbanner mb-5 d-flex align-items-center d-flex justify-content-center">
    <h1>Page de {{user.username }}</h1>
</div>

    <div class="container">
        <div class="row">
            <div class="col-12 col-md-8">

                <p class="col-12 offset-md-3 col-md-6 bg-white rounded border p-2">{{user.username }}</p>
                <p class="col-12 col-md-6 bg-white rounded border p-2 float-left">{{ user.category }}</p>
                <p class="col-12 col-md-6 bg-white rounded border p-2 float-left">{{ user.location }}</p>
                <p class="col-12 col-md-6 bg-white rounded border p-2 float-left">Inscrit le {{ user.creationDate|date("d/m/y") }}</p>
                <p class="col-12 col-md-6 bg-white rounded border p-2 float-left">{{ user.email }}</p>
                <p class="col-12 col-md-6 bg-white rounded border p-2 float-left">{{ user.phone }}</p>
                <p class="col-12 col-md-6 bg-white rounded border p-2 float-left"><a href="#">voir la galerie</a></p>
                <p class="col-12 col-md-6 bg-white rounded border p-2 float-left">système de note</p>
                <p class="col-12 col-md-6 bg-white rounded border p-2 float-left"><a href="#">contacter</a></p>

            </div>

            <div class="col-12 col-md-4 mb-4">
                <img src="{{ asset('uploads/profilPictures/' ~ user.profilPicture )}}" alt="photo d'utilisateur" class="card-img-top mb-2" alt="photo d'utilisateur">
            </div>
        </div>

        <div class="row">
            <div class="col-12 bg-white rounded border p-2 mb-4">
                <p>{{ user.description }}</p>

            </div>

            <a href="{{ path('custom_request_create') }}" class="btn btn-primary col-12 col-sm-5 col-md-3 mb-2">Faire une demande</a>
            <a href="#" class=" btn btn-primary col-12 col-sm-5 offset-sm-2 col-md-3 offset-md-6 mb-2">Rerour à la liste</a>
        </div>
    </div>

{% endblock %}

