{% extends 'base_front.html.twig' %}

{% block title %}{{ app.user.username }}{% endblock %}

{% block body %}

    <div class="container-fluid artistbanner mb-5 d-flex align-items-center d-flex justify-content-center">
        <h1>votre espace personnel</h1>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-lg-4 col-sm-12 mb-4 bg-white rounded border">
                <div class="artisteprofile">
                    <h5>Votre profil :</h5>

                    <p>{{ app.user.username }}</p>
                    <p>{{ app.user.email }}</p>
                    <p>{{ app.user.location }}</p>

                    <a class="btn btn-outline-dark mb-3" href="{{ path('updateUserProfile') }}"> modifier profil</a>
                </div>
            </div>

            <div class="d-flex justify-content-center col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card" style="width: 18rem;">
                    <img src="{{ asset('img/messagery.jpg') }}" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">Messagerie</h5>
                        <a href="#" class="btn btn-outline-light">Accès messagerie</a>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-center col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card" style="width: 18rem;">
                    <img src="{{ asset('img/demand_list.jpg') }}" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">Mes demandes</h5>
                        <a href="#" class="btn btn-outline-light">Accès à mes demandes</a>
                    </div>
                </div>
            </div>

        </div>
    </div>

{% endblock %}