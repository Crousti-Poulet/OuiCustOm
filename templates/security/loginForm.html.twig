{% extends 'base_front.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class=" text-center d-flex justify-content-center formRegister pt-5 pb-5" id="bloc_page_login">

    <div class="form col-8 col-md-6 col-lg-3" id="login_form">
        <h1 class="text-white"> Connexion</h1>
        <fieldset class="border m-3 p-3 bg-light rounded"  >
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData) }}</div>
            {% endif %}
                
            {{ form_start(monForm) }}
                {{ form_row(monForm._email) }}
       
                {{ form_row(monForm._password) }}
                
                
                <button type="submit" class="col-6 btn btn-success mb-3 mt-3"> Se Connecter </button>
                <a href="{{ path('reset_password') }}"><small id="pwdforgot" class="form-text text-muted">Mot de passe oubli√© ?</small></a>
            {{form_end(monForm)}}
            
            <hr>
        <p> Vous n'etes pas encore membre ?</p>
        <a href="{{path('registrationPage')}}" class="btn btn-outline-primary " role="button" aria-pressed="true">Devenir membre</a>
       </fieldset>
        </fieldset>
    </div>
</div>
{% endblock %}

