{% extends 'base_front.html.twig' %}


{% block title %} Modifications du compte {% endblock  %}
{% block body %}

    <div class=" text-center d-flex justify-content-center formRegister">
        <div>

        </div>
        <div class="form col-8 col-md-6 col-lg-4">
            <h1 class="text-white"> Modifications du compte</h1>
            <fieldset class="border m-3 p-3 bg-light"  >
                {{form_start(updateProfile, {'attr' : { 'novalidate' : 'true'}}) }}

                {{ form_row(updateProfile.username,   {'attr' : { 'placeholder' : "pseudo utilisateur"}, 'label': 'Pseudo'}  ) }}
                {{ form_row(updateProfile.city,   {'attr' : { 'placeholder' : "ville"}, 'label': 'Ville'} ) }}
                {{ form_row(updateProfile.zipcode,   {'attr' : { 'placeholder' : "42..."}, 'label': 'code postal'} ) }}
                {{ form_row(updateProfile.email, {'attr' : { 'placeholder' : "monadress@mail.com"}}) }}
                {{ form_row(updateProfile.category, {'attr' : { 'placeholder' : "catégorie / spécialité", 'label': 'Catégorie / Spécialité'}}) }}
                {{ form_row(updateProfile.phone, {'attr' : { 'placeholder' : "06....", 'label': 'Numéro de téléphone'}}) }}
                {{ form_row(updateProfile.description, {'attr' : {'paceholder' : "entrez votre description ici",}}) }}
                <hr>
                {{ form_row(updateProfile.profilPicture, {'attr' : {'label' : 'Image du profil'}}) }}



                <button type="submit" class="btn btn-outline-success "> modifier </button>
                {{form_end(updateProfile)}}
            </fieldset>
        </div>
    </div> 

{% endblock  %}