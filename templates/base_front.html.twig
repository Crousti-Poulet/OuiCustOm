<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css">
            <!-- Add icon library -->

            <!-- Bootstrap core CSS -->
            <link href="{{ asset('build/css/app.css') }}" rel="stylesheet">
            
        {% endblock %}

    </head>
    <body>
            <!-- HEADER FRONT -->
            <header class="container-fluid p-0" id="header_front">

                <!-- navbar -->
                <nav class="navbar navbar-expand-lg bg-primary p-0">
                    <!-- logo -->
                    <div id="bloc_logo">
                        <a class="navbar-brand text-white p-0" href="{{ path('homePage') }}"><img src="{{ asset('img/logo.png') }}"></a>
                    </div>
                    <!-- Burger-menu -->
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"><i class="fas fa-bars white" style="font-size:1.4em; color:White"></i></span>
                    </button>

                    <!-- Nav-links -->
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    
                        <ul class="navbar-nav ml-auto">

                            <li class="nav-item">
                                <a class="nav-link text-white text-center" id="nav-link-index" href="{{ path('homePage') }}">Accueil</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-white text-center" id="nav-link-login" href="#">Connexion</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-white text-center" id="nav-link-contact" href="#">Contact</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-white text-center" id="nav-link-help" href="{{ path('helpPage') }}">Aide</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </header>

            <!--MAIN-->
            <main class="bloc_page">
                {% block body %}
            
                {% endblock %}
            </main>

            <!--FOOTER FRONT-->
            <footer class="container-fluid card-footer text-muted bg-primary" id="footer_front">
                <!--Mapping du site-->
                <div class="text-white row" id="site_mapping">

                    <div class="col-4">
                        <ul>
                            <h3 class="text-center">OuiCustOm.com</h3>
                            <li>Accueil</li>
                            <li>Connexion</li>
                            <li>Contact</li>
                            <li>Aide</li>
                        </ul>
                    </div>

                <!--Copyright-->
                    <div class="col-4" id="copyright">
                        <p class="text-white">OuiCustOm © 2018</p>
                    </div>
                    <!--Logo des réseaux sociaux-->

                    <div class="social col-4">
                        <span><a href="#"><i class="fab fa-facebook-f white" style="font-size:1.8em; color:White"></a></i></span>
                        <span><a href="#"><i class="fab fa-twitter white" style="font-size:1.8em; color:White"></i></a></span>
                        <span><a href="#"><i class="fab fa-pinterest-p white" style="font-size:1.8em; color:White"></a></i></span>
                        <span><a href="#"><i class="fab fa-instagram white" style="font-size:1.8em; color:White"></a></i></span>
                    </div>
                </div>
            </footer>

        {% block javascripts %}

            <!-- Bootstrap core JavaScript -->
            <script src="http://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
            <script src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.min.js"></script>
            <script src="{{ asset('build/js/app.js') }}"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.imagesloaded/3.0.4/jquery.imagesloaded.js"></script>
            <script src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.js"></script>
        {% endblock %}
        
    </body>
</html>
